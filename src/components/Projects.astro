---
import fs from 'fs';
import path from 'path';

const projectsDir = './src/projects';

const mdFiles = fs.readdirSync(projectsDir).filter(f => f.endsWith('.md'));

const projects = mdFiles.map(file => {
  const mdPath = path.join(projectsDir, file);
  const raw = fs.readFileSync(mdPath, 'utf-8');

  const match = raw.match(/---\s*([\s\S]*?)\s*---/);
  const frontmatter: Record<string, any> = {};
  if (match) {
    match[1].split('\n').forEach(line => {
      const [key, ...rest] = line.split(':');
      if (!key) return;
      frontmatter[key.trim()] = rest.join(':').trim().replace(/^"(.*)"$/, '$1'); // quitar comillas
    });
  }

  const projectTitle = path.basename(file, '.md');

  return {
    file,
    title: frontmatter.title || projectTitle,
    description: frontmatter.description || '',
    preview: `/projects/${projectTitle}.jpg`,
  };
});
---

<section id="projects" class="py-20 gradient-bg">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold mb-16 text-center neon-text">Mis Proyectos</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 justify-items-center">
      {projects.map(project => (
        <div class="project-card group relative overflow-hidden rounded-xl bg-gradient-to-br from-purple-900/20 to-black/50 border border-purple-900/30 hover:border-purple-500/50">
          <div class="h-48 overflow-hidden">
            <img src={project.preview} alt={project.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110 aspect-video" />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2 text-purple-300">{project.title}</h3>
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
              <p class="text-gray-300 mb-4">{project.description}</p>
              <a href={`/projects/${project.title}`} class="text-purple-400 hover:text-purple-300 font-medium inline-flex items-center neon-hover">
                Ver m√°s
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
